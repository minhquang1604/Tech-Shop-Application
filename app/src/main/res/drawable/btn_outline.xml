<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Bo góc -->
    <corners android:radius="10dp" />

    <!-- Viền ngoài -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD" />

    <!-- Nền trong -->
    <solid android:color="#FFFFFF" />

    <!-- Padding bên trong -->
    <padding
        android:left="12dp"
        android:top="4dp"
        android:right="12dp"
        android:bottom="4dp" />
</shape>
