<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ProductDetailActivity">

    <LinearLayout
        android:id="@+id/topOverlay"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ðŸ”™ NÃºt Back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_circle_semi"
            android:src="@drawable/back"
            android:contentDescription="Back"
            android:padding="8dp"
            android:layout_marginEnd="8dp" />

        <!-- ðŸ” Thanh tÃ¬m kiáº¿m -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_box"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_search"
                app:tint="#B0B0B0" />

            <TextView
                android:id="@+id/searchBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:textColorHint="#B0B0B0"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:text="Search any Product..." />
        </LinearLayout>

        <!-- ðŸ›’ Icon giá» hÃ ng -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp">

            <ImageButton
                android:id="@+id/btnTopCart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_semi"
                android:src="@drawable/cart"
                android:contentDescription="Cart"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvCartBadge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/bg_badge_red"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:gravity="center" />
        </FrameLayout>


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewProduct"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="#F9F9F9"
        app:layout_constraintTop_toBottomOf="@+id/topOverlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="380dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <TextView
                    android:id="@+id/tvImageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/10"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:background="@drawable/bg_gray_round"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="8dp" />
            </FrameLayout>

            <!-- Price & title block -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white">

                    <!-- HÃ ng chá»©a giÃ¡, giÃ¡ cÅ©, giáº£m giÃ¡ vÃ  icon trÃ¡i tim -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="1">

                        <!-- Cá»¥m giÃ¡ vÃ  giáº£m giÃ¡ bÃªn trÃ¡i -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="34.191.000 â‚«"
                                android:textColor="#E53935"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvOldPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="37.990.000 â‚«"
                                android:layout_marginStart="8dp"
                                android:textColor="#9E9E9E"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-10%"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/bg_discount"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp" />
                        </LinearLayout>

                        <!-- Icon trÃ¡i tim bÃªn pháº£i -->
                        <!-- icon trÃ¡i tim -->
                        <ImageButton
                            android:id="@+id/btnWishlist"
                            android:layout_width="10dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.1"
                            android:background="@android:color/transparent"
                            android:src="@drawable/favourite_ol"
                            android:scaleType="centerInside" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="iPhone 17 Pro Max"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/tvSold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="480 sold"
                    android:textSize="13sp"
                    android:textColor="#555"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:background="#FFFFFF">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="#EEEEEE" />

                    <!-- DÃ²ng 1: Guaranteed to get by ... -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/shipping"
                            android:layout_marginEnd="6dp"
                            app:tint="#00997F" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guaranteed to get by 7 Th11 - 12 Th11"
                            android:textColor="#222222"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- DÃ²ng 2: Free Ship -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Ship 0â‚«"
                        android:textColor="#00997F"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginStart="31dp" />

                    <!-- DÃ²ng 3: Voucher -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get a 15.000Ä‘ voucher if your order arrives late."
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:layout_marginStart="31dp"
                        android:layout_marginTop="1dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="#EEEEEE" />

                    <!-- DÃ²ng Fulfilled -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/shield"
                            android:layout_marginEnd="6dp"
                            app:tint="@color/blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fulfilled by TechShop â€¢ 15-Day Free Returns â€¢ 100% Authentic"
                            android:textColor="#222222"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvAverageRating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0 â­ Product Ratings (0)"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSeeMoreReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="See more >"
                        android:textColor="#888"
                        android:textSize="13sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutAISummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_ai_summary">

                    <TextView
                        android:id="@+id/tvAI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AI Review Summary"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@drawable/favicon_ai"
                        android:drawablePadding="8dp" />


                    <TextView
                        android:id="@+id/tvOverallSentiment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>



            <!-- Product description -->
            <!-- Báº£ng chi tiáº¿t sáº£n pháº©m -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvSpecTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ThÃ´ng sá»‘ ká»¹ thuáº­t"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TableLayout
                    android:id="@+id/tableSpecs"
                    android:stretchColumns="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <!-- Customer reviews -->
            <TextView
                android:id="@+id/tvRecommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You may also like"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />

            <!-- RecyclerView products -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                tools:listitem="@layout/item_product" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom action -->
    <LinearLayout
        android:id="@+id/bottomActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btnCart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_cart_btn"
            android:src="@drawable/add_cart"
            android:contentDescription="Cart" />

        <Button
            android:id="@+id/btnBuyNow"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Buy now"
            android:backgroundTint="#1E40AF"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>