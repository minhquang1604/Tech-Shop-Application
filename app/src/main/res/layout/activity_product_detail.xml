<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">

    <LinearLayout
        android:id="@+id/topOverlay"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_semi"
            android:src="@drawable/back"
            android:contentDescription="Back"
            android:padding="8dp" />

        <!-- spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Cart with badge -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnTopCart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_semi"
                    android:src="@drawable/cart"
                    android:contentDescription="Cart"
                    android:padding="8dp" />

                <!-- badge -->
                <TextView
                    android:id="@+id/tvCartBadge"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/bg_badge_red"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:gravity="center" />
            </FrameLayout>
        </FrameLayout>


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewProduct"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="#F9F9F9"
        app:layout_constraintTop_toBottomOf="@+id/topOverlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="380dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <TextView
                    android:id="@+id/tvImageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/10"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:background="@drawable/bg_gray_round"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="8dp" />
            </FrameLayout>

            <!-- Price & title block -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="34.191.000 ₫"
                        android:textColor="#E53935"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="37.990.000 ₫"
                        android:layout_marginStart="8dp"
                        android:textColor="#9E9E9E"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-10%"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_discount"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="iPhone 17 Pro Max"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⭐ 5.0 (101) | 480 sold"
                    android:textSize="13sp"
                    android:textColor="#555"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvReviewsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Customer reviews (1.3K)"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvSeeMoreReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See more >"
                        android:textColor="#888"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOverallScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8 /5 ⭐⭐⭐⭐⭐"
                    android:textSize="13sp"
                    android:textColor="#444"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- review item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvReviewer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T*m c** C**v"
                        android:textStyle="bold"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvReviewer1Rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★★★★★"
                        android:textSize="12sp"
                        android:textColor="#FFD700"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvReviewer1Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Áo dày dặn, đường may chắc chắn, túi trong rộng và khoá kéo mượt."
                        android:textSize="13sp"
                        android:textColor="#444"
                        android:layout_marginTop="6dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher"
                            android:contentDescription="review image 1"
                            android:layout_marginEnd="6dp" />

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher"
                            android:contentDescription="review image 2"
                            android:layout_marginEnd="6dp" />

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher"
                            android:contentDescription="review image 3" />
                    </LinearLayout>
                </LinearLayout>

                <!-- review item 2 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvReviewer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="H**"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvReviewer2Rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="★★★★★"
                        android:textColor="#FFD700"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvReviewer2Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Sản phẩm xịn sò, vải dày và đường chỉ đẹp. Giao nhanh, đóng gói cẩn thận."
                        android:textColor="#444"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvSeeMoreReviews2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See more ➜"
                    android:textColor="#1E40AF"
                    android:textSize="13sp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>



            <!-- Product description -->
            <!-- Bảng chi tiết sản phẩm -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvSpecTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông số kỹ thuật"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TableLayout
                    android:id="@+id/tableSpecs"
                    android:stretchColumns="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <!-- Customer reviews -->
            <TextView
                android:id="@+id/tvRecommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You may also like"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />

            <!-- RecyclerView products -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                tools:listitem="@layout/item_product" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom action -->
    <LinearLayout
        android:id="@+id/bottomActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btnCart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_cart_btn"
            android:src="@drawable/add_cart"
            android:contentDescription="Cart" />

        <Button
            android:id="@+id/btnBuyNow"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Buy now"
            android:backgroundTint="#1E40AF"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>